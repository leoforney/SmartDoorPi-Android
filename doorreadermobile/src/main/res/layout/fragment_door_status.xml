<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/PatioDoorView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@color/open"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Patio Door">

        </TextView>

        <TextView
            android:id="@+id/FrontDoorView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@color/closed"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Front Door">

        </TextView>

        <TextView
            android:id="@+id/GarageDoorView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@color/closed"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Garage Door">

        </TextView>

        <TextView
            android:id="@+id/FrontLeftDoorView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@color/open"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Front Left Door">

        </TextView>

        <TextView
            android:id="@+id/FrontRightDoorView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@color/closed"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:text="Front Right Door">

        </TextView>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:padding="24dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Switch
                    android:id="@+id/notificationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Get notifications on door changes" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/safeTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:text="Safe Time" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>

